<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="appLanceroPU" transaction-type="JTA">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <jta-data-source>Lancero</jta-data-source>
    <class>Entidades.Pais</class>
    <class>Entidades.ModeloArma</class>
    <class>Entidades.Sucursal</class>
    <class>Entidades.Color</class>
    <class>Entidades.Calibre</class>
    <class>Entidades.TipoArma</class>
    <class>Entidades.TipoAccesorio</class>
    <class>Entidades.CodigoArea</class>
    <class>Entidades.Marca</class>
    <class>Entidades.Departamento</class>
    <class>Entidades.Rol</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
    </properties>
  </persistence-unit>
</persistence>
